{% from "govuk/components/details/macro.njk" import govukDetails %}
{% from "govuk/components/table/macro.njk" import govukTable %}

<h2 class="app-search-result__item-title">
  <a class="govuk-link" href="{{ params.href }}">
    <span class="app-search-result__school-name">{{ params.schoolName }}</span><br>
    <span class="app-search-result__placement-name">{{ params.placementName }}</span>
  </a>
</h2>

<dl class="app-result-detail">
  <div class="app-result-detail__row">
    <dt class="app-result-detail__key">Age range</dt>
    <dd class="app-result-detail__value">{{ params.minAge }} to {{ params.maxAge }}</dd>
  </div>
  <div class="app-result-detail__row">
    <dt class="app-result-detail__key">School type</dt>
    <dd class="app-result-detail__value">{{ params.establishmentType }}</dd>
  </div>
  <div class="app-result-detail__row">
    <dt class="app-result-detail__key">Gender</dt>
    <dd class="app-result-detail__value">{{ params.gender }}</dd>
  </div>
  <div class="app-result-detail__row">
    <dt class="app-result-detail__key">Religious character</dt>
    <dd class="app-result-detail__value">{{ params.religiousCharacter }}</dd>
  </div>
  <div class="app-result-detail__row">
    <dt class="app-result-detail__key">Urban or rural</dt>
    <dd class="app-result-detail__value">{{ params.urbanRural }}</dd>
  </div>
  <div class="app-result-detail__row">
    <dt class="app-result-detail__key">Ofsted rating</dt>
    <dd class="app-result-detail__value">{{ params.ofstedRating }}</dd>
  </div>
  <div class="app-result-detail__row">
    <dt class="app-result-detail__key">Mentor</dt>
    <dd class="app-result-detail__value">
      {% if params.mentors != "unknown" %}
        <ul class="govuk-list">
        {% for mentor in params.mentors %}
          <li>{{ mentor | getTeacherName }}</li>
        {% endfor %}
        </ul>
      {% else %}
        Not known yet
      {% endif %}
    </dd>
  </div>
</dl>
