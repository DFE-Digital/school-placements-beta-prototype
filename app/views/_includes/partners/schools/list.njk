<table class="govuk-table app-table--vertical-align-middle">
  <thead class="govuk-table__head">
    <tr class="govuk-table__row">
      <th class="govuk-table__header">Name</th>
      <th class="govuk-table__header">Unique reference number (URN)</th>
    </tr>
  </thead>
  <tbody class="govuk-table__body">
    {% for partner in partners %}
      <tr class="govuk-table__row">
        <td class="govuk-table__cell app-table--courses__course-name">
          <a class="govuk-link" href="{{ actions.view }}/{{ partner.id }}">
            {{ partner.name }}
          </a>
        </td>
        <td class="govuk-table__cell">
          {{ partner.urn if partner.urn else "Not entered" }}
        </td>
      </tr>
    {% endfor %}
  </tbody>
</table>
