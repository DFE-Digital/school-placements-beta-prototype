{% extends "layouts/main.njk" %}

{% set primaryNavId = "placements" %}

{% set title = placement.subjects | getPlacementLabel %}

{% if organisation.type in ["university","scitt"] %}
  {% set caption = "Placement - " + placement.school.name %}
{% endif %}

{% block beforeContent %}
{{ govukBackLink({
  text: "Back",
  href: actions.back
}) }}
{% endblock %}

{% block content %}

  {% include "_includes/notification-banner.njk" %}

  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">

      {% include "_includes/page-heading.njk" %}

      {% if organisation.type in ["university","scitt"] %}
        {% include "_includes/placements/providers/details.njk" %}

        {% include "_includes/placements/schools/mentor-details.njk" %}
        {% include "_includes/placements/schools/contact-details.njk" %}
      {% else %}
        {% include "_includes/placements/schools/details.njk" %}

        <p class="govuk-body">
          <a class="govuk-link app-link--destructive" href="{{ actions.delete }}">Remove placement</a>
        </p>
      {% endif %}

    </div>
  </div>

{% endblock %}
