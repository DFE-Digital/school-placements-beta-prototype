{% extends "layouts/main.njk" %}

{% set primaryNavId = "placements" %}

{% set title = placement.subjects | getPlacementLabel %}

{% block beforeContent %}
{{ govukBackLink({
  text: "Back",
  href: actions.back
}) }}
{% endblock %}

{% block content %}

  {% include "_includes/notification-banner.njk" %}

  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">

      {% set headingTag %}
        {{ govukTag({
          text: "Published"
        }) }}
      {% endset %}

      {% include "_includes/page-heading.njk" %}

      {% include "_includes/placements/schools/details.njk" %}

      <p class="govuk-body">
        <a class="govuk-link app-link--destructive" href="{{ actions.delete }}">Remove placement</a>
      </p>

    </div>
  </div>

{% endblock %}
